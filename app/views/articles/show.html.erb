<div class='d-flex justify-content-center mt-2'>
  <%= image_tag @article.secondary_thumbnail %>
</div>
<div class='mt-3'>
  <div class='show-container'>
    <%= @article.text %>
  </div>
</div>
<div id='form-vote' class="d-flex justify-content-center form-row text-center mt-2">
  <div id="vote-div" class="col-3">
    <%= form_tag article_votes_path(@article.id), method: :post do %>
      <%= hidden_field_tag :article_id, current_user.id %>
      <%= submit_tag "Vote", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<div class='d-flex justify-content-center mt-2 mb-3'>
  <br><%= @article.total_votes %> votes
</div>
