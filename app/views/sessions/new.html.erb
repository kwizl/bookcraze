<% provide(:title, 'Login') %>
<h2>Login</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>