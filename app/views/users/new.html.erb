<% provide(:title, 'Sign up') %>
<h2>Sign up</h2>
<div class="row">
  <div id='form-registration' class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit "Register", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
